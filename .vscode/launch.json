{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Example",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "node",
        "runtimeArgs": ["--nolazy","--report-uncaught-exception","--report-on-signal","--report-filename=./report.json", "-r", "ts-node/register"],
        "smartStep": true,
        "args": ["src/main.ts"],
        
        "cwd": "${workspaceRoot}",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**", "node_modules/**"]
      }
    ]
  }